generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Contact {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  phone     String
  email     String
  status    String   @default("New") // New, Contacted, Closed, FollowUp
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
